<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sottocorp.sotti.okhttpvolleygsonsample" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.JSONObjectActivity"
            android:label="@string/activity_title_JSON_object"/>

        <activity
            android:name=".activities.JSONArrayActivity"
            android:label="@string/activity_title_JSON_array"/>

        <activity
            android:name=".activities.NetworkImageViewActivity"
            android:label="@string/activity_title_network_image_view"/>

        <activity
            android:name=".activities.ImageRequestActivity"
            android:label="@string/activity_title_image_request"/>

    </application>

</manifest>
